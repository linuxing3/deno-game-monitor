  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Game Logger",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--unstable", "-A", "-c", "tsconfig.json", "scripts/smart-logger.ts", "send", "Code.exe", "/tmp/games.csv"],
      "port": 9229
    },
    {
      "name": "Debug Deno Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--unstable", "-A", "-c", "tsconfig.json", "server.ts"],
      "port": 9229
    },
    {
      "name": "Run Deno Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--unstable", "-A", "-c", "tsconfig.json", "server.ts"]
    }
  ]
}